{
  "$schema": "node_modules/@bizappframework/angular-build/schemas/schema-draft-04.json#",
  "libs": [
    {
      "srcDir": "libs/ng-config",
      "outDir": "dist/packages/ng-config",
      "assets": [
        "../../LICENSE",
        "README.md"
      ],
      "tsTranspilations": [
        {
          "tsconfig": "tsconfig.json",
          "target": "es2015",
          "copyTemplateAndStyleUrls": false,
          "inlineMetaDataResources": false,
          "outDir": "typings"
        }
      ],
      "bundleTargets": [
        {
          "name": "esm-es2015",
          "entry": "index.js",
          "entryResolution": {
            "entryRoot": "tsTranspilationOutDir"
          },
          "libraryTarget": "es",
          "outDir": "bundles",
          "inlineResources": false
        },
        {
          "name": "esm-es5",
          "entryResolution": {
            "entryRoot": "bundleTargetOutDir"
          },
          "libraryTarget": "es",
          "outDir": "bundles",
          "inlineResources": false,
          "addPureAnnotations": true,
          "transformScriptTargetOnly": true,
          "scriptTarget": "es5"
        },
        {
          "name": "umd-es5",
          "entryResolution": {
            "entryRoot": "bundleTargetOutDir"
          },
          "libraryTarget": "umd",
          "outDir": "bundles",
          "inlineResources": false
        }
      ],
      "packageOptions": {
        "packageConfigFile": "package.json",
        "typingsAndMetaData": {
          "entry": "index.d.ts",
          "outDir": "typings",
          "outFileName": "[packagename].d.ts"
        }
      },
      "cleanFiles": [
        "typings/**/*.js",
        "typings/**/*.map",
        "typings/**/*.html",
        "typings/**/*.css"
      ],
      "banner": "banner.txt"
