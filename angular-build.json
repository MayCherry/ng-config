{
  "$schema": "./node_modules/@bizappframework/angular-build/schemas/schema-draft-04.json#",
  "libs": [
    {
      "name": "ng-config",
      "srcDir": "modules/ng-config",
      "outDir": "dist/packages/ng-config",
      "libraryName": "baf.ngConfig",

      "tsTranspilation": {
        "tsconfig": "tsconfig-build.json",
        "copyTemplateAndStyleUrls": false,
        "inlineMetaDataResources": false
      },
      "packageOptions": {
        "packageJsonFile": "package.json"
      },
      "envOverrides": {
        "prod": {
          "clean": {
            "beforeRun": {
              "cleanOutDir": true
            }
          },
          "copy": [
            "../../LICENSE",
            "README.md"
          ],
          "banner": "../banner.txt",
          "bundles": [
            {
              "entry": "index.js",
              "entryRoot": "tsOutDir",
              "libraryTarget": "es",
              "outDir": "bundles"
              //"outFileName": "[packagename].js"
            },
            {
              "entryRoot": "prevBundleOutDir",
              "libraryTarget": "es",
              "outDir": "bundles",
              "transformScriptTargetOnly": true,
              "scriptTarget": "es5"
            },
            {
              "entryRoot": "prevBundleOutDir",
              "libraryTarget": "umd",
              "outDir": "bundles"
            }
          ],
          "packageOptions": {
            "packageJsonFile": "package.json",
            "reExportTypingsAndMetaDataAs": "[packagename]"
          }
        }
      }
    },
    {
      "name": "ng-config-http-loader",
      "srcDir": "modules/ng-config/http-loader",
      "outDir": "dist/packages/ng-config",
      "libraryName": "baf.ngConfig.httpLoader",

      "externals": {
        "@bizappframework/ng-config": "baf.ngConfig"
      },
      "tsTranspilation": {
        "tsconfig": "tsconfig-build.json",
        "copyTemplateAndStyleUrls": false,
        "inlineMetaDataResources": false
      },
      "clean": {
        "beforeRun": {
          "cleanOutDir": false
        }
      },
      "envOverrides": {
        "prod": {
          "banner": "../../banner.txt",
          "bundles": [
            {
              "entry": "index.js",
              "entryRoot": "tsOutDir",
              "libraryTarget": "es",
              "outDir": "bundles/[parentpackagename]"
              //"outFileName": "[packagename].js"
            },
            {
              "entryRoot": "prevBundleOutDir",
              "libraryTarget": "es",
              "outDir": "bundles/[parentpackagename]",
              "transformScriptTargetOnly": true,
              "scriptTarget": "es5"
            },
            {
              "entryRoot": "prevBundleOutDir",
              "libraryTarget": "umd",
              "outDir": "bundles",
              "outFileName": "[parentpackagename]-[packagename].umd.js"
            }
          ],
          "packageOptions": {
            "packageJsonFile": "package.json",
            "packageJsonFileOutDir": "[packagename]",
            "reExportTypingsAndMetaDataAs": "[packagename]"
          }
        }
      }
    },
    {
      "name": "ng-config-ngrx-store",
      "srcDir": "modules/ng-config-ngrx-store",
      "outDir": "dist/packages/ng-config-ngrx-store",
      "libraryName": "baf.ngConfig.ngrxStore",

      "externals": {
        "@ngrx/store": "ngrx.store",
        "@ngrx/effects": "ngrx.effects",
        "@ngrx/entity": "ngrx.entity",
        "@ngrx/router-store": "ngrx.routerStore",
        "@ngrx/store-devtools": "ngrx.storeDevtools",
        "@bizappframework/ng-config": "baf.ngConfig"
      },
      "tsTranspilation": {
        "tsconfig": "tsconfig-build.json",
        "copyTemplateAndStyleUrls": false,
        "inlineMetaDataResources": false
      },
      "packageOptions": {
        "packageJsonFile": "package.json"
      },
      "envOverrides": {
        "prod": {
          "clean": {
            "beforeRun": {
              "cleanOutDir": true
            }
          },
          "copy": [
            "../../LICENSE",
            "README.md",
            {
              "from": "../../dist/packages/ng-config-ngrx-store",
              "to": "../../../node_modules/@bizappframework/ng-config-ngrx-store"
            }
          ],
          "banner": "../banner.txt",
          "bundles": [
            {
              "entry": "index.js",
              "entryRoot": "tsOutDir",
              "libraryTarget": "es",
              "outDir": "bundles"
              //"outFileName": "[packagename].js"
            },
            {
              "entryRoot": "prevBundleOutDir",
              "libraryTarget": "es",
              "outDir": "bundles",
              "transformScriptTargetOnly": true,
              "scriptTarget": "es5"
            },
            {
              "entryRoot": "prevBundleOutDir",
              "libraryTarget": "umd",
              "outDir": "bundles"
            }
          ],
          "packageOptions": {
            "packageJsonFile": "package.json",
            "reExportTypingsAndMetaDataAs": "[packagename]"
          }
        }
      }
    }
  ],
   "apps": [
    {
      "name": "generate",
      "platformTarget": "web",
      "srcDir": "samples/ng-config-aspnetcore-sample/ClientApp",
      "outDir": "samples/ng-config-aspnetcore-sample/ClientApp/generated",
      "clean": {
        "beforeRun": {
          "cleanOutDir": true
        }
      },
      "polyfills": [
        "ie-polyfills.ts"
      ],
      "polyfillsChunkName": "ie-polyfills.min",
      "bundlesHash": false,
      "publicPath": "/",
      "skip": true,
      "envOverrides": {
        "generate": {
          "skip": false
        }
      }
    },
    {
      "name": "browser-app",
      "platformTarget": "web",
      "srcDir": "samples/ng-config-aspnetcore-sample/ClientApp",
      "outDir": "samples/ng-config-aspnetcore-sample/wwwroot",
      "entry": "main.browser.ts",
      "tsconfig": "tsconfig.browser.json",
      "copy": [
        "favicon.ico",
        "generated/ie-polyfills.min.js"
      ],
      "polyfills": [
        "core-js/es6/reflect",
        "core-js/es7/reflect",
        "polyfills.ts"
      ],
      "publicPath": "/",
      "baseHref": "~/",
      "htmlInject": {
        "resourceHints": true,
        "baseHrefOut": "../Views/Shared/_BaseHref.generated.cshtml",
        "iconsOut": "../Views/Shared/_Favicons.generated.cshtml",
        "resourceHintsOut": "../Views/Shared/_ResourceHints.generated.cshtml",
        "runtimeInlineOut": "../Views/Shared/_Runtime.generated.cshtml",
        "stylesOut": "../Views/Shared/_Styles.generated.cshtml",
        "scriptsOut": "../Views/Shared/_Scripts.generated.cshtml",
        "customAttributes": {
          "asp-append-version": "true"
        }
      },
      //"vendorChunk": true,
      "environmentVariables": {
        "aiInstrumentationKey": "process.env.NG_LOGGING_DEMO_APP_INSIGHTS_KEY"
      },
      "envOverrides": {
        "analyze": {
          "bundleAnalyzer": {
            "openAnalyzer": true
          },
          // "stats": {
          //   "modules": true,
          //   "chunks": true,
          //   "chunkModules": true,
          //   "entrypoints": true,
          //   "excludeModules": "node_modules"
          // },
          "concatenateModules": false
        },
        "prod": {
          "clean": {
            "beforeRun": {
              "cleanOutDir": true,
              "paths": [
                "../ClientApp/.bo-cache/"
              ]
            },
            "allowOutsideOutputDir": true
          },
          "bundlesHash": false,
          "chunksHash": false,
          "moduleRoots": [
            "dist/packages"
          ],
          "moduleReplacements": [
            {
              "resourcePath": "./environments/environment.ts",
              "newResourcePath": "./environments/environment.prod.ts"
            }
          ]
        },
        "aot": {
          "polyfills": [
            "polyfills.ts"
          ]
        }
      }
    }
  ]
  //"logLevel": "debug"
}
