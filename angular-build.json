{
  "$schema": "node_modules/@bizappframework/angular-build/schemas/schema-draft-04.json#",
  "libs": [
    {
      "name": "ng-config",
      "srcDir": "modules/ng-config",
      "outDir": "dist/packages/ng-config",
      "libraryName": "baf.ngConfig",
      "banner": "../../banner.txt",
      "envOverrides": {
        "dev": {
          "tsTranspilations": [
            {
              "tsconfig": "tsconfig-build.json",
              "target": "es5",
              "copyTemplateAndStyleUrls": false,
              "inlineMetaDataResources": false
            }
          ]
        },
        "prod": {
          "assets": [
            "../../LICENSE",
            "README.md"
          ],
          "tsTranspilations": [
            {
              "tsconfig": "tsconfig-build.json",
              "copyTemplateAndStyleUrls": false,
              "inlineMetaDataResources": false
            }
          ],
          "bundleTargets": [
            {
              "name": "esm-es2015",
              "entry": "index.js",
              "entryResolution": {
                "entryRoot": "tsTranspilationOutDir"
              },
              "libraryTarget": "es",
              "outDir": "[packagescope]",
              "inlineResources": false,
              "outFileName": "[packagename].js"
            },
            {
              "name": "esm-es5",
              "entryResolution": {
                "entryRoot": "bundleTargetOutDir"
              },
              "libraryTarget": "es",
              "outDir": "[packagescope]",
              "inlineResources": false,
              "addPureAnnotations": true,
              "transformScriptTargetOnly": true,
              "scriptTarget": "es5"
            },
            {
              "name": "umd-es5",
              "entryResolution": {
                "entryRoot": "bundleTargetOutDir"
              },
              "libraryTarget": "umd",
              "outDir": "bundles",
              "inlineResources": false
            }
          ],
          "packageOptions": {
            "packageConfigEntryFile": "package.json",
            "typingsAndMetaData": {
              "entry": "index.d.ts",
              "reExportTo": "[packagename].d.ts"
            }
          },
          "afterBundleAction": {
            "cleanFiles": [
              "src/**/*.js",
              "src/**/*.map",
              "index.js",
              "index.js.map",
              "public_api.js",
              "public_api.js.map",
              "../../../node_modules/[packagescope]/[packagename]"
            ],
            "copyFiles": [
              {
                "to": "../../../node_modules/[packagescope]/[packagename]"
              }
            ]
          }
        }
      }
    },
    {
      "name": "ng-config-http-loader",
      "extends": "ng-config",
      "srcDir": "modules/ng-config/http-loader",
      "libraryName": "baf.ngConfig.httpLoader",
      "banner": "../../../banner.txt",
      "externals": {
        "@bizappframework/ng-config": "baf.ngConfig"
      },
      "envOverrides": {
        "dev": {
          "tsTranspilations": [
            {
              "tsconfig": "tsconfig-build.json",
              "target": "es5",
              "copyTemplateAndStyleUrls": false,
              "inlineMetaDataResources": false
            }
          ]
        },
        "prod": {
          "tsTranspilations": [
            {
              "tsconfig": "tsconfig-build.json",
              "copyTemplateAndStyleUrls": false,
              "inlineMetaDataResources": false
            }
          ],
          "bundleTargets": [
            {
              "name": "esm-es2015",
              "entry": "index.js",
              "entryResolution": {
                "entryRoot": "tsTranspilationOutDir"
              },
              "libraryTarget": "es",
              "outDir": "[packagescope]/[parentpackagename]",
              "inlineResources": true,
              "outFileName": "[packagename].js"
            },
            {
              "name": "esm-es5",
              "entryResolution": {
                "entryRoot": "bundleTargetOutDir"
              },
              "libraryTarget": "es",
              "outDir": "[packagescope]/[parentpackagename]",
              "inlineResources": false,
              "addPureAnnotations": true,
              "transformScriptTargetOnly": true,
              "scriptTarget": "es5"
            },
            {
              "name": "umd-es5",
              "entryResolution": {
                "entryRoot": "bundleTargetOutDir"
              },
              "libraryTarget": "umd",
              "outDir": "bundles",
              "inlineResources": false,
              "outFileName": "[parentpackagename]-[packagename].umd.js"
            }
          ],
          "packageOptions": {
            "packageConfigEntryFile": "package.json",
            "packageConfigOutDir": "[packagename]",
            "typingsAndMetaData": {
              "entry": "index.d.ts",
              "reExportTo": "[packagename].d.ts"
            }
          },
          "afterBundleAction": {
            "cleanFiles": [
              "[packagename]/**/*.js",
              "[packagename]/**/*.map",
              "../../../node_modules/[packagescope]/[parentpackagename]"
            ],
            "copyFiles": [
              {
                "to": "../../../node_modules/[packagescope]/[parentpackagename]"
              }
            ]
          }
        }
      }
    },
    {
      "name": "ng-config-ngrx-store",
      "extends": "ng-config",
      "srcDir": "modules/ng-config-ngrx-store",
      "outDir": "dist/packages/ng-config-ngrx-store",
      "libraryName": "baf.ngConfig.ngrxStore",
      "externals": {
        "@ngrx/stroe": "ngrx.store",
        "@ngrx/effects": "ngrx.effects",
        "@ngrx/entity": "ngrx.entity",
        "@ngrx/router-store": "ngrx.routerStore",
        "@ngrx/store-devtools": "ngrx.storeDevtools",
        "@bizappframework/ng-config": "baf.ngConfig"
      }
    }
  ],
  "apps": [
    {
      "name": "browser-app",
      "platformTarget": "web",
      "srcDir": "samples/ng-config-aspnetcore-sample/ClientApp",
      "outDir": "samples/ng-config-aspnetcore-sample/wwwroot",
      "entry": "main.browser.ts",
      "tsconfig": "tsconfig.app.json",
      "assets": [
        "favicon.ico"
      ],
      "polyfills": [
        "core-js/es6/reflect",
        "core-js/es7/reflect",
        "zone.js/dist/zone"
      ],
      "publicPath": "/",
      "htmlInjectOptions": {
        "scriptsOut": "../Views/Shared/_ScriptsPartial.cshtml",
        "stylesOut": "../Views/Shared/_StylesPartial.cshtml",
        "iconsOut": "../Views/Shared/_FaviconsPartial.cshtml",
        "resourceHintsOut": "../Views/Shared/_ResourceHintsPartial.cshtml",
        "customLinkAttributes": {
          "asp-append-version": "true"
        },
        "customScriptAttributes": {
          "asp-append-version": "true"
        }
      },
      "envOverrides": {
        "prod": {
          "tsconfig": "tsconfig.app.aot.json",
          "moduleReplacements": [
            {
              "resourcePath": "./environments/environment.ts",
              "newResourcePath": "./environments/environment.prod.ts"
            }
          ]
        }
      }
    }
  ]
}